# Eclipse Mosquitto configuration for lms_mosquitto (image: eclipse-mosquitto:2.0)
# The image primarily uses mosquitto.conf; these env vars are samples
# for custom entrypoints or templated configs.

# Anonymous access enabled via mosquitto.conf
MOSQUITTO_ALLOW_ANONYMOUS=true
MOSQUITTO_LISTENER_PORT=1883
MOSQUITTO_PERSISTENCE=true
MOSQUITTO_LOG_DEST=stdout
MOSQUITTO_LOG_TYPE=all

# Username/password not required
# MOSQUITTO_USERNAME=
# MOSQUITTO_PASSWORD=

